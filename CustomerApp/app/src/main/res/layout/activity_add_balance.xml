<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.periode4groep2.customerapp.PresentationLayer.MainActivity"
    android:orientation="vertical"
    >

    <!--
    <include
        android:id="@+id/tool_bar_no_button"
        layout="@layout/tool_bar_no_button">
    </include>
    -->

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        >
        <TextView
            android:id="@+id/huidigSaldoTextId"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Huidig saldo: "
            android:textColor="@color/colorOrange"
            android:textSize="18dp" />
            <TextView
                android:id="@+id/huidigSaldoTextMoney"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="€0,00 "
                android:textColor="@color/colorOrange"
                android:textSize="18dp" />
        <TextView
            android:id="@+id/saldoId"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Saldo toevoegen:"
            android:textColor="@color/colorOrange"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/addsaldoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="€0,00"
            android:inputType="number"
            android:gravity="center"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/stortButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorOrange"
            android:text="Storten"
            android:textAllCaps="false"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>


