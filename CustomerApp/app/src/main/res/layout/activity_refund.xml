<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.periode4groep2.customerapp.PresentationLayer.RefundActivity"
    android:background="@color/colorBackground">



    <!--UI van addSaldo kopieeren-->
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentBalanceHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/current_balance_textview"
            android:textColor="@color/colorOrange"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/euroSymbolTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/euro_symbol"
                android:textColor="@color/colorOrange"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/currentBalanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_balance"
                android:textColor="@color/colorOrange"
                android:textSize="30sp" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="1">

        <EditText
            android:id="@+id/refundBalanceEntryEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12sp"
            android:gravity="top"
            android:textAlignment="center"
            android:textSize="32sp"
            android:hint="@string/example_refund_text" />

        <Button
            android:id="@+id/refundBalanceButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refund_button_text"
            />

    </LinearLayout>

</LinearLayout>
